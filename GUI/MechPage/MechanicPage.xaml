<Page x:Class="GUI.MechPage.MechanicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.MechPage" xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:entities="clr-namespace:Logic.Database.Entities;assembly=Logic"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MechanicPage">



    <Page.Resources>
        <DataTemplate DataType="{x:Type entities:Mechanic}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding FirstName}"/>
                <TextBlock Text=" "/>
                <TextBlock Text="{Binding LastName}"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <TabControl>
            <TabItem x:Name="tabMekaniker" Header="Mekaniker">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="59*"/>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="326*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Skapa ny mekaniker" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                    <extToolkit:WatermarkTextBox Watermark="Förnamn" x:Name="tbMechanicFirstName" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" FontSize="8" Grid.ColumnSpan="2"/>
                    <extToolkit:WatermarkTextBox Watermark="Efternamn" x:Name="tbMechanicLastName" HorizontalAlignment="Left" Margin="8,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" FontSize="8" Grid.Column="2"/>
                    <extToolkit:WatermarkTextBox Watermark="Födelsedatum (YYYY-MM-DD)" x:Name="tbDateOfBirth" HorizontalAlignment="Left" Margin="10,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" FontSize="8" Grid.ColumnSpan="2"/>
                    <extToolkit:WatermarkTextBox Watermark="Anställningsdatum (YYYY-MM-DD)" x:Name="tbDateOfEmployment" HorizontalAlignment="Left" Margin="8,70,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="132" FontSize="8" Grid.Column="2"/>


                    <ListBox x:Name="lbMechanicCompetences" MaxHeight="118" MinHeight="100" MaxWidth="100" MinWidth="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,111,0,0" Height="118" Width="100"/>
                    <ListBox x:Name="lbCompetences" MaxHeight="118" MinHeight="100" MaxWidth="100" MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,111,0,0" Height="118" Width="100" Grid.Column="2"/>

                    <Button x:Name="btnLeftArrow" Content="&lt;" HorizontalAlignment="Left" Margin="2,111,0,0" VerticalAlignment="Top" FontSize="8" Height="23" Width="51" Click="btnLeftArrow_Click" Grid.ColumnSpan="2" Grid.Column="1"/>
                    <Button x:Name="btnRightArrow" Content="&gt;" HorizontalAlignment="Left" VerticalAlignment="Top"  FontSize="8" Click="btnRightArrow_Click" Margin="5,206,0,0" Width="45" Height="23" Grid.ColumnSpan="2" Grid.Column="1"/>

                    <Button x:Name="btnAddMechanic" Content="Lägg till" HorizontalAlignment="Left" Margin="94,228,0,0" VerticalAlignment="Top" Click="btnAddMechanic_Click" Grid.Column="2"/>
                    <Label Content="Mekanikerns kompetenser" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top" FontSize="8" Height="28" Width="110"/>
                    <!--<Grid Margin="10,97,512,419">-->


                    <!--</Grid>-->

                </Grid>
            </TabItem>


            <TabItem Header="Ändra mekaniker">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="754*"/>
                    </Grid.ColumnDefinitions>
                    <extToolkit:WatermarkComboBox x:Name="cbMechanics" Watermark="Mekaniker" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbMechanics_SelectionChanged" Grid.ColumnSpan="3"/>
                    <Label Content="Välj mekaniker som ska ändras" HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top" Height="26" Width="181" Grid.ColumnSpan="3"/>
                    <Label Content="Ändra kompetenser: " HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                    <Button x:Name="btnRemove" Content="Ta bort mekaniker" HorizontalAlignment="Left" Margin="296,250,0,0" VerticalAlignment="Top" Click="btnRemove_Click" Height="22" Width="99" Grid.Column="2"/>

                    <ListBox x:Name="lbMechanicCompetences2" MaxHeight="118" MinHeight="100" MaxWidth="100" MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,111,0,0" Height="118" Width="100" Grid.ColumnSpan="3"/>
                    <ListBox x:Name="lbCompetences2" MaxHeight="118" MinHeight="100" MaxWidth="100" MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="132,111,0,0" Height="118" Width="100" Grid.Column="2"/>

                    <Button x:Name="btnLeftArrow2" Content="&lt;" HorizontalAlignment="Left" Margin="75,111,0,0" VerticalAlignment="Top" FontSize="8" Height="23" Width="51" Click="btnLeftArrow2_Click" Grid.Column="2"/>
                    <Button x:Name="btnRightArrow2" Content="&gt;" HorizontalAlignment="Left" VerticalAlignment="Top"  FontSize="8" Click="btnRightArrow2_Click" Margin="75,206,0,0" Width="51" Height="23" Grid.Column="2"/>
                    <Button x:Name="btnSave" Content="Spara" HorizontalAlignment="Left" Margin="441,250,0,0" VerticalAlignment="Top" Click="btnSave_Click" Height="22" Width="58" Grid.Column="2"/>

                    <Label Content="Ändra egenskaper:" HorizontalAlignment="Left" Margin="291,70,0,0" VerticalAlignment="Top" Grid.Column="2"/>

                    <Label Content="Förnamn: " HorizontalAlignment="Left" Margin="291,97,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <extToolkit:WatermarkTextBox x:Name="tbFirstNameToChange" HorizontalAlignment="Left" Margin="407,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" Height="25" Grid.Column="2"/>

                    <Label Content="Efternamn: " HorizontalAlignment="Left" Margin="291,128,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <extToolkit:WatermarkTextBox x:Name="tbLastNameToChange" HorizontalAlignment="Left" Margin="407,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" Height="24" Grid.Column="2"/>

                    <Label Content="Anställningsdatum: " HorizontalAlignment="Left" Margin="291,156,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <extToolkit:WatermarkTextBox x:Name="tbDateOfEmploymentToChange" HorizontalAlignment="Left" Margin="407,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" Height="24" Grid.Column="2"/>

                    <Label Content="Födelsedatum: " HorizontalAlignment="Left" Margin="291,188,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <extToolkit:WatermarkTextBox x:Name="tbDateOfBirthToChange" HorizontalAlignment="Left" Margin="407,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" Height="24" Grid.Column="2"/>
                    <Label Content="Användare: " HorizontalAlignment="Left" Margin="291,216,0,0" VerticalAlignment="Top" Grid.Column="2"/>

                    <TextBlock x:Name="tbUserID" HorizontalAlignment="Left" Margin="407,221,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="184" Grid.Column="2"/>
                    <Label Content="Mek. kompetenser" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" FontSize="10" Grid.ColumnSpan="3"/>
                    <Label Content="Tillgängliga" HorizontalAlignment="Left" Margin="132,88,0,0" VerticalAlignment="Top" FontSize="10" Width="100" Grid.Column="2"/>

                </Grid>

            </TabItem>

            <TabItem Header="Lista mekaniker">


            </TabItem>

        </TabControl>



    </Grid>


</Page>
